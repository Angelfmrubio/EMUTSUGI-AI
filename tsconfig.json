{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "types": ["node"],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,  // Habilita todas las comprobaciones estrictas
    "forceConsistentCasingInFileNames": true  // Fuerza el uso consistente de mayúsculas/minúsculas en los nombres de archivos
  },
  "include": ["src", "env.d.ts", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
